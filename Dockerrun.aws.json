{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "kingusha/betmelon-client",
      "hostname": "client",
      "essential": false,
      "memory": 128,
      "environment": [
        {
          "name": "DOCKER_PROVIDER",
          "value": "ECS"
        }
      ]
    },
    {
      "name": "api",
      "image": "kingusha/betmelon-server",
      "hostname": "api",
      "essential": false,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 3001,
          "protocol": "tcp",
          "containerPort": 3001
        }
      ],
      "environment": [
        {
          "name": "DOCKER_PROVIDER",
          "value": "ECS"
        },
        {
          "name": "PGUSER",
          "value": "postgres"
        },
        {
          "name": "PGHOST",
          "value": "betmelon-postgres.cqcy1wy01gug.eu-west-3.rds.amazonaws.com"
        },
        {
          "name": "PGPASSWORD",
          "value": "kingushaa"
        },
        {
          "name": "PGPORT",
          "value": 5432
        },
        {
          "name": "PGDATABASE",
          "value": "betsheets"
        }
      ]
    },

    {
      "name": "nginx",
      "image": "kingusha/betmelon-nginx",
      "hostname": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "protocol": "tcp",
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "protocol": "tcp",
          "containerPort": 443
        }
      ],
      "environment": [
        {
          "name": "DOCKER_PROVIDER",
          "value": "ECS"
        }
      ],
      "links": ["client", "api"]
    }
  ]
}
