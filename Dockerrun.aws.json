{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "kingusha/betmelon-client",
      "hostname": "client",
      "essential": false,
      "memory": 128,
      "environment": [
        {
          "name": "DOCKER_PROVIDER",
          "value": "ECS"
        }
      ]
    },
    {
      "name": "api",
      "image": "kingusha/betmelon-server",
      "hostname": "api",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 3001,
          "protocol": "tcp",
          "containerPort": 3001
        }
      ],
      "environment": [
        {
          "name": "DOCKER_PROVIDER",
          "value": "ECS"
        }
      ]
    },

    {
      "name": "nginx",
      "image": "kingusha/betmelon-nginx",
      "hostname": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "protocol": "tcp",
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "protocol": "tcp",
          "containerPort": 443
        }
      ],
      "environment": [
        {
          "name": "DOCKER_PROVIDER",
          "value": "ECS"
        }
      ],
      "links": ["client", "api"]
    }
  ]
}
